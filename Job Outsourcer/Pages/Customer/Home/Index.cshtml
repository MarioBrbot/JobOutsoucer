@page
@model Job_Outsourcer.Pages.Customer.Home.IndexModel
@{
}


<div class="py-4 my-4">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row form-group">
        <div class="col-8 offset-2">
            <div class="card">
              

                <div class="card-body px-lg-5 pt-4">
                    <form method="post">
                        <h3 class="col-12 text-success text-center py-4"><strong>Uredi Profil</strong></h3>
                        <hr />
                        <div class="form-group row">
                            <div class="col-3">
                                <label asp-for="appUser.FirstName"></label>
                            </div>
                            <div class="col-9">
                                <input class="form-control" asp-for="appUser.FirstName" />
                                <span class="text-danger" asp-validation-for="appUser.FirstName"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-3">
                                <label asp-for="appUser.LastName"></label>
                            </div>
                            <div class="col-9">
                                <input class="form-control" asp-for="appUser.LastName" />
                                <span class="text-danger" asp-validation-for="appUser.LastName"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-3">
                                <label asp-for="appUser.Email"></label>
                            </div>
                            <div class="col-9">
                                <input class="form-control" asp-for="appUser.Email" />
                                <span class="text-danger" asp-validation-for="appUser.Email"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-3">
                                <label>Kontakt Broj</label>
                            </div>
                            <div class="col-9">
                                <input class="form-control" asp-for="appUser.PhoneNumber" />
                                <span class="text-danger" asp-validation-for="appUser.PhoneNumber"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-3">
                                <label asp-for="appUser.Address"></label>
                            </div>
                            <div class="col-9">
                                <input class="form-control" asp-for="appUser.Address" />
                                <span class="text-danger" asp-validation-for="appUser.Address"></span>
                            </div>

                        </div>

                        <div class="form-group row">
                            <div class="col-9">
                                @Html.DropDownListFor(m => m.appUser.CountyId,
                                                        Model._CountyList,
                                                        "- Odaberite županiju -",
                                                        new { @class = "form-control" })
                                <span class="text-danger" asp-validation-for="appUser.CountyId"></span>
                            </div>
                        </div>

                        @*<div class="py-2">
                            <button type="submit" class="btn btn-success form-control">Uredi Profil</button>
                        </div>*@

                        <div class="py-2">
                            <button type="button" class="btn btn-success form-control mb-3 ratingModal" data-toggle="modal" data-target="#modal">
                                Uredi Profil
                            </button>
                        </div>



                        <div class="container">
                            <div class="title modal " tabindex="-1" id="modal"
                                 data-keyboard="false" data-backdrop="static">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">

                                            <button type="button" class="close" data-dismiss="modal">×</button>
                                        </div>
                                        <div class="modal-body" style="text-align: center; ">
                                            <h3>Podaci su poslani.</h3>
                                            <br />

                                            <div class="modal-footer">
                                                <button type="submit" class="btn btn-success form-control" data-toggle="modal" data-target="#modal">U redu</button>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>





                </div>


            </div>
    </div>
</div>
</div>