@page
@using Job_Outsourcer.Utility

@if (User.IsInRole(StaticDetails.Admin))
{
    <div class="border backgroundWhite container">
        <div class="row">
            <div class="col-6">
                <h2 class="text-primary">Lista poslova</h2>
            </div>
            <div class="col-6 text-right">
                <a asp-page="Upsert" class="btn btn-primary"><i class="fas fa-plus"></i> &nbsp; Dodaj posao</a>
            </div>
        </div>
        <br /><br />
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Naziv</th>
                    <th>Cijena</th>
                    <th>Tip Posla</th>
                    <th>Akcije</th>
                </tr>
            </thead>
        </table>
    </div>

}
else
{
    <div>
        <h1 class="text-danger"> Nedopušten pristup</h1>
    </div>
}

@section Scripts{
    <script src="~/js/jobItem.js"></script>
}