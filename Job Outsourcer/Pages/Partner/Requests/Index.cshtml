@page
@model Job_Outsourcer.Pages.Partner.Requests.IndexModel
@{
ViewData["Title"] = "Index";
}



<form method="post" asp-action="Upsert" enctype="multipart/form-data">
    <div class="container">
        <div class="row px-2 mx-2 backgroundWhite border">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model.request.Id != 0)
            {
                <input type="hidden" asp-for="request.Id" />
            }

            <div class="col-12 px-3" style="border-bottom:1px solid #325d88">
                <h2 class="text-primary">Stvori Zahtjev</h2>
            </div>

            <div class="col-8 pt-3">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="request.Title"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="request.Title" />
                        <span class="text-danger" asp-validation-for="request.Title"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="request.Content"></label>
                    </div>
                    <div class="col-9">
                        <textarea class="form-control" asp-for="request.Content" id="txtDesc" style="height:200px;"></textarea>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="request.Document"></label>
                    </div>
                    <div class="col-9">
                        <input type="file" class="form-control" name="files" id="uploadBox" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-9 offset-3">
                        <div class="row">
                            <div class="col-6">




                                <button type="submit" class="btn btn-primary form-control">Pošalji Zathjev</button>

                            </div>

                        </div>

                    </div>
                </div>
            </div>



        </div>
    </div>
</form>

@section Scripts{
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: "lists",
            menubar: 'file edit format'
        });
        function ValidateInput() {
            if (document.getElementById("uploadBox").value == "") {
                swal("Error", "Odaberite dokument", "error")
                return false;
            }
            return true;
        };
    </script>
}